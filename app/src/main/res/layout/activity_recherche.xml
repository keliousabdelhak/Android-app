<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bos.search.RechercheActivity">

    <TextView
        android:textColor="@color/noir"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Notre Application Vous Propose Une Recherche Avancée Pour Vos Cours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <TextView
        android:textColor="@color/orange"
        android:textSize="16dp"
        android:text="Recherche Par Titre"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_recherche_titre"
        android:layout_marginTop="5dp"
        android:text="Cliquer Ici pour la recherche "
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:text="Recherche Par Domaine"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_recherche_domaine"
        android:layout_marginTop="5dp"
        android:text="Cliquer Ici Pour la recherche"
        android:layout_gravity="center"
        android:background="@drawable/btn2_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/orange"
        android:textSize="16dp"
        android:text="Recherche Spécialité"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_recherche_spec"
        android:layout_marginTop="5dp"
        android:text="Cliquer Ici Pour la recherche"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:text="Recherche Par clé"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_recherche_cle"
        android:layout_marginTop="5dp"
        android:text="Cliquer Ici Pour la recherche"
        android:layout_gravity="center"
        android:background="@drawable/btn2_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
